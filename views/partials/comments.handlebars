<div class="comments" style="color: tan;">
    {{#each this}}
    <section class="comment" style="background: darkcyan;
    margin-bottom: 10px;
    border-radius: 25px;">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            <div>
            {{comment_text}}
            </div>
        </div>
    </section>
    {{/each}}
</div>